<panel>
  <boolean id="save_session_state" value="true" />

  <layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

  <!-- Starting XI Styles -->
  <flags id="stxi" value="tables/standard/normal" />

  <!-- Subs Styles -->
  <flags id="subs" value="tables/custom/squad/row/substitute/row" />

  <!-- divider row appearance -->
  <flags id="divd" value="tables/standard/divider/row" />

  <container id="nb11">
    <layout class="arrange_vertical_attachment" alignment="top" offset="50" gap="0" />
    <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="10"/>

    <!--explanatory text-->
    <widget class="text" alignment="centre" auto_size="vertical" size="11" font="fonts/letterpressed">
      <translation id="text" translation_id="320160" type="use" value="No records available[COMMENT: team records overview panel, text to display when there are no player records close to being broken]" />
    </widget>

  </container>

  <container class="titled_box" id="titl" appearance="boxes/subsection/standard/paper">
    <layout class="arrange_horizontal_attachment" alignment="fill" offset="0" gap="0" />
    <layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

    <!-- embedded view menu -->
    <container id="btns" embed_in_frame="true">
      <layout class="arrange_horizontal_attachment" alignment="right" embed_in_frame="true" gap="0" offset="10" />
      <layout class="stick_to_sides_attachment" alignment="top" inset="2" apply_to_children="true" embed_in_frame="true" />
      <layout class="stick_to_sides_attachment" alignment="top, right" embed_in_frame="true" inset="0" />
	  <layout class="fit_children_attachment" alignment="vertical" embed_in_frame="true" />
      <layout class="fit_children_attachment" alignment="horizontal, fill" embed_in_frame="true" offset="10" />

      <!-- seasons popup -->
      <widget class="embedded_season_selection_list" id="sesl" width="200" sele="sels" embed_in_frame="true" height="30"/>
    </container>

    <container>
      <layout class="arrange_vertical_attachment" alignment="bottom, extend" offset="0" />
      <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

      <widget class="client_object_list_table" id="awsl" sort_disabled="true" aull="true" should_force_refresh="true">
        <integer id="contextual_handler_column_id" value="Pnms" />
		<record id="default_properties" alignment="left,centre_y" colour="black"/>
        <list id="viewed_property_ids">
          <integer value="Pers" />
          <integer value="Pbep" />
          <integer value="Pbea" />
          <integer value="Pbeg" />
          <integer value="Pbav" />
        </list>
      </widget>

      <container>
        <layout class="arrange_horizontal_attachment" alignment="right" offset="0" gap="0" />
        <layout class="stick_to_sides_attachment" alignment="bottom" apply_to_children="true" inset="5" />
        <layout class="fit_children_attachment" alignment="vertical" offset="5" />
        
        <widget class="button" auto_size="horizontal" height="30" click_event="ecwn">
          <translation id="text" translation_id="275840" type="use" value="Where Are They Now?" />
        </widget>
      </container>

    </container>

    <widget class="pitch_with_tactics" id="attp" default_width="-1" priority="1" icon_flags="drop_initial_if_possible,show_name,show_number,dont_colour_number,show_captain,dont_fade_icons,dont_show_team_names,animate_filled_rows,show_preview_info_popup,show_selection_image" player_icon_file="tactics/tactics icon preview info panel" line_width="1">
      <boolean id="vertical" value="true" />
      <boolean id="pitch_is_read_only" value="true" />
      <integer id="pitch_vertical_padding" value="20" />
    </widget>

  </container>

</panel>