<panel>
	<list id="properties_to_forward">
		<record get_property="dynamic_image_text" set_property="valu" target="bldT"/>
		<record get_property="Pers" set_property="objt" target="log1"/>
	</list>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<!-- overlay -->
	<widget class="picture" id="ssha" file="photos/dynamic/comp summary/bg" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>

	<container>
		<layout class="arrange_vertical_attachment" layout="-4, -10, -4, -2" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

		<widget class="spacer" />

		<container>
			<layout class="arrange_horizontal_attachment" layout="-4, -10, -4, 30" offset="0" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<widget class="spacer" />
			<!-- Logo/Portrait -->
			<widget class="object_portrait_picture" id="log1" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
				<!-- PROP_PERSON -->
				<record id="object_property" get_property="Pers" set_property="objt"/>
			</widget>
			<widget class="spacer" />

		</container>
		
		<widget class="text" id="bldT" alignment="centre" style="bold" colour="white" size="xlarge" font="title"/>
		<widget class="spacer" />
	</container>
</panel>