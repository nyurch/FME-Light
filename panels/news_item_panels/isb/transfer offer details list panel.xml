<panel navigation_container="true">
	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0" />

	<container class="inner_subtle_box_no_margin" id="inbx">
		<attachment_group class="vertical_arrange_autosize" vertical_offset="6" vertical_gap="6" horizontal_alignment="horizontal" horizontal_inset="6"/>

		<!-- line with fee, club, offer type and action -->
		<container>
			<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_layout="-2,-3,90" horizontal_gap="6" vertical_offset="0" />

			<!-- offering club -->
			<widget class="transfer_centre_club_info_widget" id="tmiw" />

			<container class="inner_subtle_box_no_margin" >
				<attachment_group class="vertical_arrange_autosize" vertical_offset="6" vertical_gap="0" horizontal_alignment="horizontal" horizontal_inset="6"/>

				<container>
					<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="fill" />

					<!-- offer status -->
					<container file="widgets/transfer multiple offers status widget" />

					<!-- offer value -->
					<container file="widgets/transfer multiple offers value widget" />

				</container>

			</container>

			<container id="deWI">
				<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="fill">
					<global id="horizontal_gap" name="ui.split_button_row_gap" />
				</attachment_group>

				<!-- accept -->
				<widget class="icon_button" id="accw" appearance="buttons/standard/split/left/button" icon="icons/16px/tick" auto_size="vertical" icon_alignment="centre" icon_colour="positive"/>

				<!-- stall -->
				<widget class="icon_button" id="stlw" appearance="buttons/standard/split/middle/button" icon="icons/16px/time" auto_size="vertical" icon_alignment="centre"/>

				<!-- reject -->
				<widget class="icon_button" id="canw" appearance="buttons/standard/split/right/button" icon="icons/16px/cross" auto_size="vertical" icon_alignment="centre" icon_colour="negative"/>
			</container>
		</container>

		<container id="ClBx">
			<attachment_group class="vertical_arrange_autosize" vertical_gap="2" vertical_offset="0"/>

			<!--transfer additional clauses-->
			<widget class="text" id="TCti" auto_size="vertical" alignment="left, centre_y" font="label" colour="text" hidden="true" />
			<widget class="text" id="TCli" auto_size="vertical" alignment="left, centre_y" hidden="true" colour="faded text"/>

			<container>
				<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="fill" horizontal_gap="8"/>

				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_gap="2" vertical_offset="0"/>

					<container>
						<attachment_group class="vertical_arrange_autosize" vertical_gap="2" vertical_offset="0"/>

						<!-- loan duration -->
						<widget class="text" id="LDti" auto_size="vertical" font="label" colour="text" hidden="true">
							<translation id="text" translation_id="230113" type="use" value="Duration"/>
						</widget>
						<widget class="text" id="LDli" auto_size="vertical" hidden="true" colour="faded text"/>
					</container>

					<container>
						<attachment_group class="vertical_arrange_autosize" vertical_gap="2" vertical_offset="0"/>

						<!-- loan options -->
						<widget class="text" id="LOti" auto_size="vertical"  alignment="left, centre_y" font="label" colour="text" hidden="true">
							<translation id="text" translation_id="248394" type="use" value="Loan Options"/>
						</widget>
						<widget class="text" id="LOli" auto_size="vertical" alignment="left, centre_y" hidden="true" colour="faded text"/>
					</container>

				</container>

				<container>
					<attachment_group class="vertical_arrange_autosize" vertical_gap="2" vertical_offset="0"/>

					<container>
						<attachment_group class="vertical_arrange_autosize" vertical_gap="2" vertical_offset="0"/>

						<!-- loan clauses -->
						<widget class="text" id="LCti" auto_size="vertical" alignment="left, centre_y" font="label" colour="text" hidden="true">
							<translation id="text" translation_id="247578" type="use" value="Loan Clauses"/>
						</widget>
						<widget class="text" id="LCli" auto_size="vertical"  alignment="left, centre_y" hidden="true" colour="faded text"/>
					</container>

					<container>
						<attachment_group class="vertical_arrange_autosize" vertical_gap="2" vertical_offset="0"/>

						<!--loan future fee extra fees -->
						<widget class="text" id="TAfT" auto_size="vertical" alignment="left, centre_y" font="label" colour="text" hidden="true" >
							<translation id="text" translation_id="247578" type="use" value="Loan Clauses"/>
						</widget>
						<widget class="text" id="TAft" auto_size="vertical" alignment="left, centre_y" hidden="true" colour="faded text"/>
					</container>

				</container>

			</container>

		</container>

		<!-- message for when they've accepted or rejected on your behalf -->
		<widget class="text" id="chmm" size="10" auto_size="vertical" alignment="centre" hidden="true" />
	</container>

</panel>